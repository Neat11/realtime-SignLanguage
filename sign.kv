#:kivy 1.0.0
#:import NoTransition kivy.uix.screenmanager.NoTransition

<MyScreenManager>:
    transition: NoTransition()
    canvas:
        Color:
            rgba: 27/255,26/255,26/255,1
        Rectangle:
            size: self.size 
    Launch:
        name: "home"
    Splash:
        name: "splash"
    LearnPage:
        name:"learnpage"
    Create:
        name:"create"

<LearnPage>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
    
        MDNavigationLayout:

            ScreenManager:

                Screen:
                    name: 'learnpage'

                    BoxLayout:
                        id: "center"
                        size_hint: 1,1  
                        orientation:'vertical' 
                        
                        AnchorLayout:
                            anchor_x:'right'
                            anchor_y:'top'
                    
                            MDTopAppBar:
                                left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                                md_bg_color: '#000000'#"#64d2ed"
                                title: "More Information"
                                anchor_title: "center"
                    MDLabel:
                        text:"Signo"
                        font_size: dp(50)
                        theme_text_color: "Custom"
                        text_color: 100/255,210/255,237/255,1
                        text_size: self.size
                        halign: "center"
                        valign: "top"
                        font_name: "Comic"
                    

                    AnchorLayout:
                        anchor_x:"right"
                        anchor_y:"top"
                        canvas:
                            Color: 
                                rgba:(100/255,210/255,237/255,1)
                            Rectangle:                
                                source: "icon.png"
                                size: 50,50
                                pos: self.width-55,self.height-55 
                
            MDNavigationDrawer:
                id: nav_drawer
                ContentNavigationDrawer:
                    id: content_drawer
                
                    BoxLayout:
                        orientation: 'vertical' 
                        StackLayout:
                            Button:
                                text: "home"
                                text_color: 0,0,0,1
                                size_hint: 1,0.2
                                background_color: 0,0,0,1
                                on_release: root.manager.current='home'
                            Button:
                                text: "Learn with Signo"
                                text_color: 0,0,0,1
                                size_hint: 1,0.2
                                background_color: 0,0,0,1
                                on_release: root.manager.current='learnpage'
                            
                            Button:
                                text: "Create"
                                size_hint: 1,0.2
                                background_color: 0,0,0,1
                                on_release: root.manager.current = 'create'
                        AnchorLayout:
                            anchor_x:'center'
                            anchor_y:'bottom'
                            Button:
                                text:"Help"
                                text_color: 0,0,0,1
                                size_hint: 1,0.2
                                background_color: 0,0,0,1
