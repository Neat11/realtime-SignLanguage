<Splash>:
    BoxLayout:
        orientation:"vertical"
        MDLabel:
            text: "Signo"
            size_hint: 0.4,0.4
            font_size: dp(40)
        MDRectangleFlatButton:
            text:"Launch"
            on_release: root.launch()

          
<Launch>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        
        MDNavigationLayout:

            ScreenManager:

                Screen:
                    name: 'home'
                    BoxLayout:
                        id: "center"
                        size_hint: 1,1
                        orientation:'horizontal' 

                        AnchorLayout:
                            anchor_x:"left"
                            anchor_y:"center"
                            canvas:
                                Color: 
                                    rgba:(1,1,1,1)
                                Rectangle:                
                                    source: "Group 3 (1).png"
                                    size:  300,300
                                    pos: self.width/2-150,self.height/2-150
                                    #  self.width-250,self.height-250
                                    
                                    

                                  
                        
                        # Image:
                        #     source: 'Group 3 (1).png'
                        #     size: self.width-250,self.height-250


                        BoxLayout:
                            size_hint:1,1
                            orientation:'vertical'
                            BoxLayout:
                                orientation:'vertical'
                                size_hint:1,1
                                MDLabel:
                                    padding: (30,30)
                                    multiline:True
                                    text: root.description
                                    text_size:self.size
                                    font_size: dp(self.height*.04)
                                    theme_text_color: "Custom"
                                    text_color: 100/255,210/255,237/255,1
                                    halign: "center"
                                    valign: "center"
                                    font_name: "Comic"
                            BoxLayout:
                                size_hint:1,0.5
                                orientation:'vertical'
                                padding_y: dp(20)
