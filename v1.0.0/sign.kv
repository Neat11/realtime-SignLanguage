#:kivy 1.0.0
#:import NoTransition kivy.uix.screenmanager.NoTransition

<MyScreenManager>:
    transition: NoTransition()
    canvas:
        Color:
            rgba: 27/255,26/255,26/255,1
        Rectangle:
            size: self.size
    Launch:
        name: "Launch"
    Splash:
        name: "splash"

<Splash>:
    BoxLayout:
        orientation:"vertical"
        Label:
            text: "Signo"
            size_hint: 0.4,0.4
            font_size: dp(40)
        Button:
            text:"Launch"
            on_release: root.launch()
          
<Launch>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            id: 'container'
            orientation: "vertical"
            BoxLayout:
                size_hint:1,1
                id:'header'
                orientation:"horizontal"
                AnchorLayout:
                    id:'Menu_button'
                    anchor_x:'center'
                    anchor_y:'center'
                    canvas:
                        Color:
                            rgba: 100/255,210/255,237/255,1
                        RoundedRectangle:
                            size:root.height/6-root.height/24,6
                            pos: 30,root.height-50     
                            radius:  [(5, 5), (5, 5), (5, 5), (5, 5)]
                        RoundedRectangle:
                            size:root.height/6-root.height/24,6
                            pos: 30,root.height+50-root.height/6      
                            radius:  [(5, 5), (5, 5), (5, 5), (5, 5)]
                BoxLayout:
                    size_hint: 4,1
                    Label:
                        text:"Signo"
                        font_size: dp(70)
                Image:
                    source: "icon.png"
                    size_hint:1,1

            BoxLayout:
                id: "center"
                size_hint: 1,3
                orientation:'horizontal' 
                Image:
                    keep_ratio:True
                    source: 'vector art.png'
                    size: 2*root.width,1.5
                BoxLayout:
                    size_hint:0.5,1
                    orientation:'vertical'
                    AnchorLayout:
                        anchor_x:'center'
                        anchor_y: 'center'
                        Button:
                            text:'Launch'
                            size_hint:0.5,0.25
                            font_size: dp(30)
                            background_color: (20/216,120/216,119/216,255)
                            on_release: root.launch_button()
                    AnchorLayout:
                        anchor_x:'center'
                        anchor_y: 'center'
                        Button:
                            text:'Close'
                            on_release: app.Exit()
                            size_hint:0.5,0.25
                            font_size: dp(30)
                            background_color: (20/216,120/216,119/216,255)
            BoxLayout:
                orientation: "horizontal"
                size_hint:1,1
                id:'footer'
                canvas:
                    Color:
                        rgba: 100/255,210/255,237/255,1
                    RoundedRectangle:
                        size: root.width,root.height/6
                        pos:0,0
                        radius:[(40,40),(40,40),(0,0),(0,0)]
                Image:
                    keep_ratio:True
                    source: 'footer.png'
                    size: 2*root.width,1.5


    